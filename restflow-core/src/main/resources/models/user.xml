<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<model>
    <version>v1</version>
    <datasources>
        <datasource name="mysql" class="com.platum.restflow.resource.impl.jdbc.JdbcRepository">
            <properties>
                <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/test"/>
                <property name="driverClassName" value="com.mysql.jdbc.Driver" />
                <property name="username" value="root"/>
                <property name="password" value=""/>         
            </properties>
        </datasource>
    </datasources>
    <resources>
        <resource name="user">
        	<datasource>mysql</datasource>
            <idProperty>id</idProperty>
            <generateCrud>true</generateCrud>       
            <idAutoGenerated>true</idAutoGenerated>
            <properties>
                <property name="id">
                    <type>integer</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>false</required>
                </property>            
                <property name="name">
                    <type>string</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>true</required>
                </property>
                <property name="email">
                    <type>email</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>true</required>
                </property>    
                <property name="password" >
                    <type>string</type>
                    <labelFromMessages>false</labelFromMessages>
                    <required>true</required>
                </property>                                
            </properties>
            <methods>
            	<method name="xpto">
            		<url>PATCH /:id</url>
            		<query>UPDATE USER SET EMAIL = :email WHERE ID = :id</query>
            	</method>
            </methods>            
        </resource>
    </resources>
</model>