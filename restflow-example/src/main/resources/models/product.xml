<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<model>
    <version>v1</version>
    <resources>
        <resource name="product" table="product">
        	<datasource>postgres</datasource>
            <idProperty>id</idProperty>
			<idAutoGenerated>true</idAutoGenerated>
			<filesystem>localFs</filesystem>

            <properties>
                <property name="id">
                    <type>integer</type>
                </property>
                <property name="name">
                    <type>string</type>
                    <required>true</required>
                    <max>50</max>
                </property>
            </properties>
            
			<methods>
				<method name="getProducts">
					<url>GET</url>
					<query>
						select * from product
					</query>
				</method>				

				<method name="addProduct">
					<url>POST</url>
					<query>
						insert into product(name) values(:name)
					</query>
				</method>	
			</methods>              
        </resource>
    </resources>
</model>